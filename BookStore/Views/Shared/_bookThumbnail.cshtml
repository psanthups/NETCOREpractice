@model BookModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/no-image-.jpg" : Model.CoverImageUrl)" class="img-thumbnail"/>
    <div class="card-body">
        <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : Model.Title)</h5>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not available" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <a asp-controller="Book" asp-action="GetBook" asp-route-Id="@Model.Id"
               class="btn btn-primary"> View Details</a>
        </div>
        <small class="text-muted"> Author : @(string.IsNullOrEmpty(Model.Author) ? "NA" : Model.Author)</small>
    </div>
</div>