@using BookStore.Models;
@model IEnumerable<BookModel>



<div class="container">
    <h3 class="display-4">All Books</h3>
    
        <div class="row">
            @foreach (var book in Model)
            {
            <div class="col-md-4">
                <div class="card mb-4 ">

                    <img src="~/images/1.2.png" width="414" height="190" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="/book/getbook/@book.Id" class="btn btn-primary"> View Details</a>
                        </div>
                        <small class="text-muted"> Authour : @book.Author</small>
                    </div>
                </div>

            </div>
            }



        </div>
    
</div>  


